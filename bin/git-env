#!/bin/sh

# git-env
#
# Copyright (c) 2012 - 2014, Andrew Keller
#
# Runs the given command at the top level of the current repository.

cd "$(git rev-parse --show-toplevel)" || exit $?

if [ "$1" == "--recursive" ]
then
RECURSIVE=1
shift
else
RECURSIVE=0
fi

"$@" || exit $?

if [ $RECURSIVE -gt 0 ]
then
git submodule foreach --recursive "$@" || exit $?
fi
